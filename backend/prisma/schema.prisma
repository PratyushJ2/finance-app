generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  accounts     Account[]
  transactions Transaction[]
  email        String        @unique
  password     String
  status       String        @default("active")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Account {
  id        String        @id @default(uuid())
  name      String
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  entries   LedgerEntry[]
  createdAt DateTime      @default(now())
}

model Transaction {
  id          String        @id @default(uuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  description String?
  entries     LedgerEntry[]
  createdAt   DateTime      @default(now())
}

enum EntryType {
  Debit
  Credit
}

model LedgerEntry {
  id            String       @id @default(uuid())
  transactionId String
  transaction   Transaction  @relation(fields: [transactionId], references: [id])
  accountId     String
  account       Account      @relation(fields: [accountId], references: [id])
  amount        Decimal
  entryType     EntryType
  description   String?
  createdAt     DateTime     @default(now())

  @@index([accountId])
  @@index([transactionId])
}